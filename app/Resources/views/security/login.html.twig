{% extends "base.html.twig" %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <input type="hidden" name="_target_path" value="{{ path('subscribers') }}"/>

        <div class="well">
            <div class="row">

                <div class="col-md-12 text-center">
                    <h2 class="text-center">Login</h2>
                </div>

                <div class="col-md-4 col-md-offset-4">
                    <div class="input-group">
                        <span class="input-group-addon" id="username">Username: </span>
                        <input type="text" name="_username" value="{{ last_username }}" class="form-control"
                               aria-describedby="username">
                    </div>
                    <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="password">Password: </span>
                        <input type="password" name="_password" class="form-control"
                               aria-describedby="password">
                    </div>
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success"><i class="fa fa-signin"></i> Login</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}