{% for message in app.flashes('success') %}
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        </div>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        </div>
    </div>
{% endfor %}